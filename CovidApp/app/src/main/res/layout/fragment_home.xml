<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="380dp"
        android:layout_height="36dp"
        android:textColor="#C8000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.066" />

    <Button
        android:id="@+id/keepFitBtn"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:text="Keep Me Fit"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home"

        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/imBoredBtn"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:text="I'm Bored"
        android:textColor="#FFFFFF"
        app:backgroundTint="#46B1CF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        app:layout_constraintVertical_bias="0.142"
        app:strokeColor="#FFFFFF" />

    <Button
        android:id="@+id/boostWellbeingBtn"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:text="Boost Wellbeing"
        app:backgroundTint="#ECB323"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/keepFitBtn"
        app:layout_constraintStart_toEndOf="@+id/imBoredBtn"
        app:layout_constraintTop_toBottomOf="@+id/text_home"
        app:layout_constraintVertical_bias="0.142" />


    <Button
        android:id="@+id/signPostBtn"
        android:layout_width="379dp"
        android:layout_height="167dp"
        android:background="#FFFFFF"
        android:text="Covid Sign Post"
        app:backgroundTint="#395F9C"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.385" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="410dp"
        android:layout_height="276dp"
        android:background="#CFE9F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="false"
        android:src="@drawable/ic_expand"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/signPostBtn"
        app:layout_constraintEnd_toEndOf="@+id/signPostBtn"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toStartOf="@+id/signPostBtn"
        app:layout_constraintTop_toTopOf="@+id/signPostBtn"
        app:layout_constraintVertical_bias="0.071" />

</androidx.constraintlayout.widget.ConstraintLayout>